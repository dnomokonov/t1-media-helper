{
    "manifest_version": 3,
    "name": "T1-Helper",
    "description": "Adding the necessary functionality for the Holding T1 player",
    "version": "1.0",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["*://debut.t1-academy.ru/*"],
    "background": {
        "service_worker": "/script/background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://debut.t1-academy.ru/*"],
            "js": ["/script/update.js"],
            "css": ["/styles/control.css"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "/icons/icon128x128.png"
    },
    "icons": {
        "16": "/icons/icon16x16.png",
        "32": "/icons/icon32x32.png",
        "64": "/icons/icon64x64.png",
        "128": "/icons/icon128x128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/download.png"
            ],
            "matches": ["*://debut.t1-academy.ru/*"]
        }
    ]
}